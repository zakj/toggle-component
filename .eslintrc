{
    "rules": {
        "comma-dangle": [1, "always-multiline"],
        "indent": [2, 2],
        "linebreak-style": [2, "unix"],
        "no-console": 0,
        "quotes": [2, "single"],
        "semi": [2, "always"]
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "extends": "eslint:recommended"
}
